page{
  background: #f4f4f4;
}
.add_cus{
  height:10000rpx;
}
.tips{
  width:750rpx;
  height:120rpx;
  background: rgba(0,0,0,0.50);
}
.tips_left{
  float:left;
  width:24rpx;
  height:24rpx;
  margin:28rpx 20rpx 0 30rpx; 
}
.tips text{
  float:left;
  width:595rpx;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #FFFFFF;
  line-height: 40rpx;
  margin-top:20rpx;
}
.tips_right{
  width:48rpx;
  height:48rpx;
  margin:16rpx 0 0 3rpx;
}

.rl_title{
  color: #999;
  height: 88rpx;
  font-size: 28rpx;
  line-height: 88rpx;
  padding-left: 30rpx;
}
.rl_content_box{
  padding:0 30rpx;
  background: #fff;
  box-shadow: inset 0 -1px 0 0 rgba(204,204,204,0.50), inset 0 1px 0 0 rgba(204,204,204,0.50);
}
.rl_content{
  height: 100rpx;
  font-size: 28rpx;
  position: relative;
  border-bottom: 1px solid #f1f1f1;
}
.rl_content_box .rl_content:nth-last-child(1){
  border: none;
}
.more{
  position: absolute;
  right: 12rpx;
  top: 26rpx;
  width: 48rpx;
  height: 48rpx;
  display: block;
}
.flex3{
  float:left;
  width:130rpx;
}
.flex9{
  float:left;
  width:390rpx;
}
.flex6{
  float:left;
  width:260rpx;
}

.rl_content text,.pickerTxt{
  color: #333;
  height: 100rpx;
  line-height: 100rpx;
}
.rl_content input{
  height: 100rpx;
  line-height: 100rpx;
}
.cus_right{
  width:188rpx;
  height:60rpx;
  float:right;
  margin-right:0;
  margin-top:20rpx;

}
.cus_right text{
  height:60rpx;
  width:94rpx;
  text-align: center;
  line-height: 60rpx;
  box-sizing: border-box;
  float:left;
  background:#fff;
  border:1px solid  #C81528;
  color:#C81528;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
}
.cus_right .man{
  border-radius:8rpx 0 0 8rpx;
}
.cus_right .lady{
  border-radius:0 8rpx 8rpx 0;
  border-left:none;
}
.cus_right text.on{
  background: #C81528;
  color:#fff;
}

.cus_type{
  width:340rpx;
  float:left;
  height:60rpx;
  margin-top:20rpx;
}
.cus_type text{
  float:left;
  line-height: 60rpx;
  margin-right:20rpx;
  width:150rpx;
  height:60rpx;
  text-align: center;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #666666;
  box-sizing: border-box;
  border: 1px solid #999999;
  border-radius: 10rpx;
}
.cus_type text.on{
  border:none;
  background:#C81528;
  color:#fff;
}
.agree{
  margin-top: 70rpx;
  margin-left: 30rpx;
  margin-bottom: 30rpx;
}
.agree .icon{
  width: 28rpx;
  height: 28rpx;
  position: relative;
  border-radius: 8rpx;
  margin-right: 10rpx;
  background: #fff;
  display: inline-block;
  border: 1px solid #ccc;
  vertical-align: middle;
}
.agree .txt{
  color: #999;
  font-size: 24rpx; 
  line-height: 28rpx;
}
.agree.checked .icon{
  background: #c81528;
  border-color: #c81528;
}
.agree.checked .icon:after{
  position: absolute;
  left: 1rpx;
  top: 6rpx;
  content: "";
  width: 17rpx;
  height: 7rpx;
  display: inline-block;
  border-left: 2px solid #fff;
  border-bottom: 2px solid #fff;
  transform: rotate(-45deg);
}
.submit{
  width:690rpx;
}