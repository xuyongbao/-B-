/* pages/release/release.wxss */
.rl_box{
  height: 100%;
  background: #f4f4f4;
}
.rl_title{
  color: #999;
  height: 88rpx;
  font-size: 28rpx;
  line-height: 88rpx;
  padding-left: 30rpx;
}
.rl_content_box{
  padding:0 30rpx;
  background: #fff;
  box-shadow: inset 0 -1px 0 0 rgba(204,204,204,0.50), inset 0 1px 0 0 rgba(204,204,204,0.50);
}
.rl_content{
  height: 100rpx;
  font-size: 28rpx;
  position: relative;
  border-bottom: 1px solid #f1f1f1;
}
.rl_content_box .rl_content:nth-last-child(1){
  border: none;
}
.more{
  position: absolute;
  right: 12rpx;
  top: 26rpx;
  width: 48rpx;
  height: 48rpx;
  display: block;
}
.flex3{
  float:left;
  width:130rpx;
}
.flex9{
  float:left;
  width:390rpx;
}
.rl_content text,.pickerTxt{
  color: #333;
  height: 100rpx;
  line-height: 100rpx;
}
.rl_content input{
  height: 100rpx;
  line-height: 100rpx;
}
.agree{
  margin-top: 70rpx;
  margin-left: 30rpx;
  margin-bottom: 30rpx;
}
.agree .icon{
  width: 28rpx;
  height: 28rpx;
  position: relative;
  border-radius: 8rpx;
  margin-right: 10rpx;
  background: #fff;
  display: inline-block;
  border: 1px solid #ccc;
  vertical-align: middle;
}
.agree .txt{
  color: #999;
  font-size: 24rpx; 
  line-height: 28rpx;
}
.agree.checkecd .icon{
  background: #c81528;
  border-color: #c81528;
}
.agree.checkecd .icon:after{
  position: absolute;
  left: 1rpx;
  top: 6rpx;
  content: "";
  width: 17rpx;
  height: 7rpx;
  display: inline-block;
  border-left: 2px solid #fff;
  border-bottom: 2px solid #fff;
  transform: rotate(-45deg);
}
.rl_btn button{
  width: 690rpx;
  height: 90rpx;
  color: #fff;
  font-size: 32rpx;
  background: #C81528;
  border-radius: 8rpx;
  margin: 0 auto 119rpx;
}
.rl_btn.btn_disabled button{
  background: rgba(200,21,40,0.40);
}